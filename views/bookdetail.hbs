
<div class="input-group" id = "inputfind">
    <input type="text" placeholder="Sách cần tìm" id="searchInput">
<div class="input-group-append">
    <a class="input-group-text" href="search" id="searchIcon">
    <img src="/img/glass.png" alt="" height="30px">
    </a>
</div>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col-5" id="sachchitiet" >
             {{#with book}}
            <img src={{imagePath}} alt="sach">
        </div>
        <div class="col">
            <ul>
               
                <h4>{{title}}</h4>
                <li>ISBN:  {{isbn}}</li>
                <li>Thể loại:   {{category}}</li>
                <li>TÁc giả:  {{author}}</li>
                <li>Nhà xuất bản:   {{publisher}}</li>
                <li>Năm xuất bản:   {{publishYear}}</li>
                <li>Ngôn ngữ:   {{language}}</li>
                <li>Nội dung:   {{description}}</li>
                {{/with}}
            </ul>
        </div>
    </div>
</div>